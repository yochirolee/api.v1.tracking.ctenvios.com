generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  phone     String? @unique
  password  String
  name      String
  role      Roles   
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  createdBy User? @relation("UserCreator", fields: [createdById], references: [id])
  createdById String?
  isActive Boolean @default(true)
  lastLogin DateTime? @db.Timestamptz()
  agencyId  Int
  agency Agency @relation(fields: [agencyId], references: [id])
  shipments Shipment[]
  events ShipmentEvent[]
  issues Issues[] @relation("IssueCreator")
  comments IssueComments[]
  refreshToken String? //how to handle this?
  resolvedIssues Issues[] @relation("IssueResolver")
  users User[] @relation("UserCreator")
 
  @@index([email])
}

model Agency {
  id Int @id @default(autoincrement())
  name String
  aliases String[]
  contact String
  phone String
  email String
  address String
  parent Int
  isActive Boolean @default(true)
  warehouses Warehouse[]
  shipments Shipment[]
  users User[]
}

model Warehouse {
  id Int @id @default(autoincrement())
  name String
  address String?
  agencyId Int
  agency Agency @relation(fields: [agencyId], references: [id]) 
}





enum Roles {
  ROOT
  ADMINISTRATOR
  AGENCY_ADMIN
  MESSENGER
  SALES
  CARRIER_MESSENGER
  CARRIER_ADMIN
  CARRIER_WAREHOUSE_MANAGER
  CARRIER_WAREHOUSE_WORKER
  WAREHOUSE_MANAGER
  WAREHOUSE_WORKER
  AGENT
}

model Shipment {
  hbl String @unique @id
  invoiceId Int?
  statusId Int
  status Status @relation(fields: [statusId], references: [id])
  container Container? @relation(fields: [containerId], references: [id])
  location Location? @relation(fields: [locationId], references: [id])
  locationId Int?
  sender String?
  receiver String?
  description String?
  state String?
  city String?
  containerId Int?
  agencyId Int?
  agency Agency? @relation(fields: [agencyId], references: [id])
  events ShipmentEvent[] 
  issues Issues[]
  updateMethod UpdateMethod @default(SYSTEM)
  userId String
  user User @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now()) @db.Timestamptz()
  @@index([hbl])
  
}
model Location {
  id Int @id @default(autoincrement())
  name String?
  address String?
  city String?
  state String?
  country_code String?
  latitude Float 
  longitude Float 
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamptz()
  shipments Shipment[]
  events ShipmentEvent[]
  @@unique([latitude,longitude])
}

model ShipmentEvent {
  id Int @id @default(autoincrement())
  hbl String
  shipment Shipment @relation(fields: [hbl], references: [hbl], onDelete: Cascade, onUpdate: Cascade)
  status Status @relation(fields: [statusId], references: [id])
  statusId Int
  timestamp DateTime  @db.Timestamptz()
  updateMethod UpdateMethod @default(SYSTEM)
  userId String
  user User @relation(fields: [userId], references: [id])
  location Location? @relation(fields: [locationId], references: [id])
  locationId Int?
  @@index([hbl,statusId] )
  @@unique([hbl,statusId])
}

enum UpdateMethod {
  SYSTEM
  EXCEL_FILE
  SCANNER
  
}


model Issues {
  id Int @id @default(autoincrement())
  hbl String
  shipment Shipment @relation(fields: [hbl], references: [hbl])
  description String
  type IssueType
  resolved Boolean @default(false)
  resolvedBy User? @relation("IssueResolver", fields: [resolvedById], references: [id])
  resolvedById String?  
  resolvedAt DateTime?
  comments IssueComments[]
  imageUrl String?
  userId String
  user User @relation("IssueCreator", fields: [userId], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()
}

model IssueComments {
  id Int @id @default(autoincrement())
  issueId Int
  issue Issues @relation(fields: [issueId], references: [id])
  comment String
  imageUrl String?
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()
}

enum IssueType {
  DAMAGE
  DELAY
  INCORRECT_LABEL
  LOST
  OTHER


}

model Status {
  id Int @id @default(autoincrement())
  code String @unique
  name String
  description String
  shipmentEvents ShipmentEvent[]
  shipments Shipment[]
}

model Container {
  id Int @id 
  shipments Shipment[]
  containerNumber String
  status ContainerStatus @default(IN_PORT)
  isActive Boolean @default(false)
}

enum ContainerStatus {
  IN_PORT
  UNGROUPED
 
}



